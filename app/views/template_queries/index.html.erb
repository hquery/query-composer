<%= render partial: 'shared/tab_menu', locals: { selected: {template_queries: true}}%>

<div id="dashboardPeriod" >

  <br style="clear:left"/>
  <div class="simpleTableContainer">

<h1><b>Query Template Administration</b></h1>

<table class="simpleTable">
<tr><td></td></tr>
<% if @template_queries.size %>
  <tr><b>
    <th>Title</th>
    <th>Description</th>
  </b></tr>
<% end %>
<% @template_queries.each do |query| %>
<tr><td></td></tr>
  <tr>
    <td><%= link_to query.title, template_query_path(query.id) %></td>
    <td><%= query.description %></td>
    <td><%= button_to 'Edit', {:action=>'edit', :id=>query.id}, :method=>:get if current_user.admin?%></td>
  </tr>
<% end %>
</table>
  <%= link_to(new_template_query_path, class: "bluebutton") do %><span>Add Template</span><% end if current_user.admin?%>
</div>
</div>


